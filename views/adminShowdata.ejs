        }

        body {
            background: #f4f7fa;
            color: #1e2a44;
            min-height: 100vh;
            display: flex;
            overflow-x: hidden;
        }

        .sidebar {
            width: 240px;
            background: #1e2a44;
            color: #ffffff;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding: 24px;
            display: flex;
            flex-direction: column;
            gap: 16px;
