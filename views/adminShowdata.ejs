        }

        .slider.open {
            left: 0;
        }

        .slider-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px;
            border-bottom: 1px solid #e2e8f0;
        }

        .slider-header h3 {
            font-size: 18px;
            color: #1e2a44;
        }

        .slider-header button {
            background: none;
            border: none;
            font-size: 24px;
            color: #9ca3af;
            cursor: pointer;
        }

        .slider-content {
            padding: 16px;
        }

        .slider-content button {
            width: 100%;
            padding: 12px;
            background: #dc2626;
            color: #ffffff;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            cursor: pointer;
            transition: background 0.2s;
        }

        .slider-content button:hover {
            background: #b91c1c;
        }

        @media (max-width: 768px) {
            .sidebar {
